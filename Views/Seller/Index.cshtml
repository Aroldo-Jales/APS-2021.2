@model IEnumerable<Projeto.Models.Seller>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendedor</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar Novo</a>
    <a class="btn btn-primary" asp-action="Index">Todos Vendedores</a>
    <a class="btn btn-primary" asp-controller="Department" asp-action="Index">Departamentos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                Vendas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Department.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <a class="btn btn-outline-primary" href="salerecord?sId=@item.Id">Detalhes</a>
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready( function () {
                $('.table').DataTable( {
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
        }
    } );
        });
    </script>
}
