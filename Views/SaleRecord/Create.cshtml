@model Projeto.Models.SaleRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seller" class="control-label"></label>
                <select asp-for="SellerForeignKey" class ="form-control" asp-items="ViewBag.SellerForeignKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" type="number"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select class ="form-control" asp-items="Html.GetEnumSelectList<SaleStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-outline-primary" id="back-link">Retornar</a>
            </div>
        </form>
    </div>
</div>

